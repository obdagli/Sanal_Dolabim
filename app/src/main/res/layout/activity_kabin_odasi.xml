<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".KabinOdasi">

    <TextView
        android:id="@+id/textView_kabin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="196dp"
        android:backgroundTint="#3D50B6"
        android:text="Kabin Odası"
        android:textColor="#1B7CB1"
        android:textSize="27sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_4"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_3">

        <ImageView
            android:id="@+id/photo4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="362dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#3F51B5"
                android:text="4 - Alt Beden"
                android:textColor="@color/teal_700"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_pchoice4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#009688"
                android:text="Seç"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="414dp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_kombinkaydet"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="#087ECD"
        android:drawableTint="#FFFFFF"
        android:text="Kombini Kaydet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_5" />

    <Button
        android:id="@+id/bt_gecmiskombin"
        android:layout_width="275dp"
        android:layout_height="44dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/black"
        android:text="Geçmiş Kombinleri Göster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_kombinkaydet" />

    <LinearLayout
        android:id="@+id/linearLayout_3"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_2">

        <ImageView
            android:id="@+id/photo3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#3F51B5"
                android:text="3 - Üst Beden"
                android:textColor="@color/teal_700"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_pchoice3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#009688"
                android:text="Seç"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_geridon_kabin"
        android:layout_width="97dp"
        android:layout_height="90dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/teal_700"
        android:text="Geri Dön"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bt_kombinkaydet"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_5" />

    <LinearLayout
        android:id="@+id/linearLayout_1"
        android:layout_width="275dp"
        android:layout_height="104dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#3F51B5"
                android:text="1 - Başüstü"
                android:textColor="@color/teal_700"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_pchoice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#009688"
                android:text="Seç"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/et_kombinadi"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="71dp"
        android:ems="10"
        android:hint="Kombin Adı"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView_kabin"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout_2"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_marginStart="71dp"
        android:layout_marginEnd="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_1">

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="127dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#3F51B5"
                android:text="2 - Surat"
                android:textColor="@color/teal_700"
                android:textSize="22sp"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="164dp" />

            <Button
                android:id="@+id/bt_pchoice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#009688"
                android:text="Seç"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="194dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_5"
        android:layout_width="275dp"
        android:layout_height="100dp"
        android:layout_marginStart="71dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout_4">

        <ImageView
            android:id="@+id/photo5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:layout_editor_absoluteX="75dp"
            tools:layout_editor_absoluteY="472dp"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView

                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#3F51B5"
                android:text="5 - Ayak"
                android:textColor="@color/teal_700"
                android:textSize="22sp" />

            <Button
                android:id="@+id/bt_pchoice5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:backgroundTint="#009688"
                android:text="Seç"
                android:textColor="@android:color/white"
                tools:layout_editor_absoluteX="198dp"
                tools:layout_editor_absoluteY="524dp" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>